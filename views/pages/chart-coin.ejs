<body>
    <div class="container">
        <div class="row my-4 align-items-center">
            <div class="col d-flex">
                <img id="price-change-image" class="my-auto"
                    style="margin-right: 0.5rem; height: 20px; width: 20px;">
                <h3 id="chart-title" class="my-auto" style="">Bitcoin Value</h2>
            </div>
            <div class="col">
                <div id="dropdown"></select>
            </div>
        </div>
        <div class="row">
            <canvas id="chart" width="700" height="500"></canvas>
        </div>
    </div>
</body>
<script>
    let chart = createChart("bitcoin", "chart")
    var popularCoins

    $(document).ready(() => {
        createDropdown("dropdown")
        getPopularCoins().then(coins => {
            popularCoins = coins
            options = convertCoinsToDropdownOptions(coins)
            bindOptionsToDropdown(options, "dropdown")
            setOnChangeListenerForDropdown(changeChartCoin, "dropdown")
        })
    })
</script>
