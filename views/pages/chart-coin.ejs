<!DOCTYPE html>

<head>
    <%- include("../partials/header-altin.ejs") %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.3.2/chart.min.js"
        integrity="sha512-VCHVc5miKoln972iJPvkQrUYYq7XpxXzvqNfiul1H4aZDwGBGC0lq373KNleaB2LpnC2a/iNfE5zoRYmB4TRDQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="helpers/coinHelper.js"></script>
    <script src="helpers/chartHelper.js"></script>
    <!-- Dropdown menu dependencies -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="helpers/dropdown/dropdownHelper.js"></script>
    <script src="helpers/dropdown/dropdownCoinHelper.js"></script>
    <link rel="stylesheet" type="text/css" href="stylesheets/dropdown.css">
    <!-- Page specific stylesheet -->
    <link rel="stylesheet" type="text/css" href="stylesheets/chart.css">
</head>

<body>
    <div class="container mt-5">
        <div class="row mb-3">
            <div class="col">
                <div id="dropdown" class="float-end" style="width: 13rem"></div>
                <div class="flex-row align-items-end pt-2">
                    <img id="price-change-image" class="float-start"
                        style="margin-top: 0.25rem; margin-right: 0.25rem; height: 15px; width: 15px;">
                    <h5 id="chart-price" class="my-auto" style=""></h5>
                </div>
            </div>
            <div class="col">
            </div>
        </div>
        <div class="row">
            <canvas id="chart" width="900" height="500" style="background-color: #19242e; border-radius: 5px;"></canvas>
        </div>
        <div class="row">
            <%- include("../partials/digital-clock.ejs") %>
        </div>
    </div>
</body>
<script>
    let chart = createChart("bitcoin", "chart")

    let popularCoins
    $(document).ready(() => {
        createDropdown("dropdown")
        getPopularCoins().then(coins => {
            popularCoins = coins
            options = convertCoinsToDropdownOptions(coins)
            bindOptionsToDropdown(options, "dropdown")
            setOnChangeListenerForDropdown((selectedOption) => changeChartCoin(selectedOption, popularCoins), "dropdown")
            changeInputFieldPlaceholderText("Search for a coin...", "dropdown")
        })
    })
</script>
<%- include("../partials/footer-altin.ejs") %>

</html>