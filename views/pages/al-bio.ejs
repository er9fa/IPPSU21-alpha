            working on this internship over the summer.</p>
        <br>
        <h4>On this day:</h4>
        <div id="fun-facts-of-the-day" class="border"></div>
        </br>

        <!-- Bitcoin tracking elements -->
        <h5>Bitcoin</h5>
        <div id="btc-price"></div>
        <div id="btc-market-cap"></div>
        <div id="btc-volume"></div>

        <div id="timer" class="text-center"></div>
    </div>

    <script>
        var i = 0;
        setInterval(() => {
            document.getElementById("timer").innerHTML = i;
            if (i % 6 === 0) {
                fetch("http://history.muffinlabs.com/date").then(r => r.json()).then(data => {
                    document.getElementById("fun-facts-of-the-day").innerHTML = data.data.Events[Math.floor(i / 6)].text;
                })
            }
            i++;
        }, 1000);

        fetch("https://api.coingecko.com/api/v3/coins/", {
            method: 'GET',
            headers: {
                'id': 'bitcoin',
            }
        }).then(r => r.json()).then(data => {
            // Get the current price of BTC
            let btcPrice = data[0].market_data.current_price.usd.toFixed(2)
            // Use the Numeral library to format values (e.g. 1000 becomes 1k)
            let btcMarketCap = numeral(data[0].market_data.market_cap.usd).format('0.0a')
            let btcVolume = numeral(data[0].market_data.total_volume.usd).format('0.0a')

            document.getElementById("btc-price").innerHTML =
                "Current value: $" + btcPrice
            document.getElementById("btc-market-cap").innerHTML =
                "Market cap: $" + btcMarketCap
            document.getElementById("btc-volume").innerHTML =
                "24 hour trading vol: $" + btcVolume

            console.log("Bitcoin price: " + btcPrice)
            console.log("Bitcoin market cap: " + btcMarketCap)
            console.log("Bitcoin volume: " + btcVolume)
        })

    </script>

    <!-- Formats numbers with abbreviations (e.g. 1000 -> 1k) -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/numeral.js/2.0.6/numeral.min.js"></script>
